@model MusicRadioStore.WebUI.Models.AlbumStoreViewModel
@{
    ViewBag.Title = "Albums Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Albums Store</h2>
<div class="container">
    @foreach (var item in Model.AlbumSets)
    {
        <div class="row">
            <div class="col-md-6">
                <img class="img" style="height:150px" src="~/Content/AlbumImages/@item.Image" />
            </div>
            <div class="col-md-6">
                <ul>
                    @foreach (var song in item.SongSets)
                    {
                        <li>@song.Name</li>
                    }
                </ul>
            </div>
        </div>
        <row>
            <div class="col-md-12">
                <strong>@item.Name</strong>
            </div>
        </row>
        <row>
            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>
        </row>
        <row>
            <div class="col-md-12">
                <a href="@Url.Action("AddToBasket", "Basket", new { Id=item.Id })" class="btn btn-default">Agregar</a>
            </div>
        </row>

    }
</div>
<div class="col-md-12 clearfix" />

